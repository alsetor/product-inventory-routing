{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "RoutingOptions": {
        "Mode": "proxy" // or "proxy"
    },
    "ReverseProxy": {
        "Routes": {
            "route1": {
                "Match": {
                    "Path": "api/{**catchall}"
                },
                "ClusterId": "api"
            },
            "route2": {
                "Match": {
                    "Path": "{**catchall}"
                },
                "ClusterId": "frontend"
            }
        },
        "Clusters": {
            "frontend": {
                "Destinations": {
                    "nextjs": { "Address": "http://localhost:3000/" }
                }
            },
            "backend": {
                "Destinations": {
                    "api": { "Address": "http://localhost:5001/" }
                }
            }
        }
    }
}
