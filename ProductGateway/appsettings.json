{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "RoutingOptions": {
        "Mode": "redirect" // "redirect" or "proxy"
    },
    "ReverseProxy": {
        "Routes": {
            "api": {
                "Match": {
                    "Path": "api/{**catchall}"
                },
                "ClusterId": "backend"
            },
            "frontend": {
                "Match": {
                    "Path": "{**catchall}"
                },
                "ClusterId": "frontend"
            }
        },
        "Clusters": {
            "frontend": {
                "Destinations": {
                    "nextjs": { "Address": "http://product-frontend:3000" }
                }
            },
            "backend": {
                "Destinations": {
                    "api": { "Address": "http://product-api:5001" }
                }
            }
        }
    }
}
